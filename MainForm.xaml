<Window x:Class="MobilePhoneShop.MainForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MobilePhoneShop"
        mc:Ignorable="d"
        Title="Главная" Height="450" Width="800" MinHeight="450" MinWidth="800" >
    <Grid>
        <Border Background="White" CornerRadius="20" Margin="10,10,10,0" Height="60" VerticalAlignment="Top">
            <Border.Effect>
                <DropShadowEffect BlurRadius="50" Color="DarkMagenta" ShadowDepth="0"/>
            </Border.Effect>
            <StackPanel>
                <Grid VerticalAlignment="Center" Height="60">
                    <Button x:Name="Profile" Content="Профиль" Foreground="Black" Background="Transparent" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,10,10,10" Width="95" Height="40" />
                </Grid>
            </StackPanel>
        </Border>
        <Border Background="White" CornerRadius="20" Margin="10,99,10,10">
            <Border.Effect>
                <DropShadowEffect BlurRadius="50" Color="DarkMagenta" ShadowDepth="0"/>
            </Border.Effect>
            <StackPanel>
                <Grid>
                    
                </Grid>
            </StackPanel>
        </Border>
    </Grid>
</Window>
